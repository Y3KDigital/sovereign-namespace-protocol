# Horizon Configuration for Digital Giant Stellar Network

# Database connection
DATABASE_URL=postgres://horizon:horizon123@postgres-horizon:5432/horizon?sslmode=disable

# Stellar Core connection
STELLAR_CORE_DATABASE_URL=postgres://stellar:stellar123@postgres-core:5432/stellar-core-node1?sslmode=disable
STELLAR_CORE_URL=http://validator-1:11626

# Network
NETWORK_PASSPHRASE=Digital Giant Private Network ; January 2026
HISTORY_ARCHIVE_URLS=

# Server settings
PORT=8000
ADMIN_PORT=8001
LOG_LEVEL=info

# Ingestion
INGEST=true
CAPTIVE_CORE_CONFIG_PATH=/etc/stellar/stellar-core.cfg
CAPTIVE_CORE_STORAGE_PATH=/tmp/captive-core
CAPTIVE_CORE_USE_DB=false

# Performance
MAX_DB_CONNECTIONS=50
CURSOR_POLLING_INTERVAL=5

# Features
PER_HOUR_RATE_LIMIT=72000
ENABLE_SOROBAN=true
ENABLE_INGESTION_FILTERING=true

# CORS
CORS_ORIGINS=*
