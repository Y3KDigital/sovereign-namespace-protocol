# Example configuration for Web3 Rarity Namespace System
# Copy this file to .env and update with your settings

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8080

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Blockchain Configuration
# Ethereum mainnet, testnet, or local node
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_CHAIN_ID=31337

# Smart Contract Addresses (update after deployment)
NAMESPACE_REGISTRY_CONTRACT=0x0000000000000000000000000000000000000000

# Private Key for Contract Operations (DO NOT COMMIT THIS)
# PRIVATE_KEY=your_private_key_here

# Database Configuration (for future use)
DATABASE_URL=sqlite://namespace.db

# Logging Level
RUST_LOG=info

# Feature Flags
ENABLE_NFT_MINTING=true
ENABLE_CERTIFICATE_GENERATION=true
ENABLE_IPFS_PINNING=true
